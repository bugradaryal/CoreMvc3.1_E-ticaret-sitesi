@model SearchViewModel

@{
    ViewData["Title"] = " | Ürünleri Yönet";
}

<h1 class="mb-2">Ürünleri Yönet</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Bir Ürün Ekle</a></h5>
    </li>
    <li class="list-group-item">
        <form asp-action="Search" method="post" class="form-inline">
            <h5 class="mt-1 mr-5">Bir Ürün Ara</h5>
            <label>Arama Terimi:</label>
            <input type="text" asp-for="SearchTerm" class="form-control ml-2 mr-2">
            Arama Ölçütü:
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="product" checked>İsim
            </label>
            <label class="radio-inline">
                <input type="radio" class="form-control ml-2 mr-2"
                       asp-for="Type" value="type">Tip
            </label>
            <button type="submit" class="btn btn-primary ml-2 mr-2">Ara</button>
            <span asp-validation-for="SearchTerm" class="text-danger"></span>
        </form>
    </li>
</ul>