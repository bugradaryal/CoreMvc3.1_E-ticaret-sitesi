@model Product

@{
    ViewData["Title"] = " | Ürün Detayları";
}

<h1>@Model.Name</h1>
<h6>@Model.Type.Name</h6>

<div class="row">
    <div class="col-md-4">
        <img src="@ViewBag.Url" class="img-fluid img-thumbnail" alt="Product Image" />
    </div>
    <div class="col-md-8">
        <h3 class="price">@Model.Price.ToString("c")</h3>  

        <form asp-action="Add" asp-controller="Cart" method="post">
            <button type="submit" name="id" value="@Model.ProductId"
                    class="btn btn-primary">SepeteEkle</button>
        </form>
    </div>
</div>